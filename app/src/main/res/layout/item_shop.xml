<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/item_backgroud">


        <ImageView
            android:id="@+id/iv_shop_item_list"
            android:layout_width="60dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_shopping_bag_24"
            />

        <TextView
            android:id="@+id/tv_shop_title"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="상품명"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_shop_item_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:breakStrategy="simple"
            />

        <TextView
            android:id="@+id/tv_shop_mall_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="쇼핑몰"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_shop_item_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:breakStrategy="simple"
            />

        <TextView
            android:id="@+id/tv_Shop_lprice"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="최저가"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_shop_item_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_mall_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:id="@+id/iv_like_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/heart_full"
            app:layout_constraintLeft_toRightOf="@+id/iv_shop_item_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Shop_lprice"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:breakStrategy="simple"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
