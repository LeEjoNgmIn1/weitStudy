<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_backgroud">


        <ImageView
            android:id="@+id/iv_shop_item_list"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_shopping_bag_24"
            />

        <TextView
            android:id="@+id/tv_shop_title"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:text="상품명"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_shop_item_list"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:breakStrategy="simple"
            />

        <TextView
            android:id="@+id/tv_shop_mall_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="쇼핑몰"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:breakStrategy="simple"
            />

        <TextView
            android:id="@+id/tv_Shop_lprice"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="최저가"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            />

        <ToggleButton
            android:id="@+id/tb_like"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_shop_item_list"
            android:background="@drawable/heart_empty"
            android:textOn=""
            android:textOff=""
            />

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tb_like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_shop_item_list"
            android:gravity="center"
            android:text="0"
            android:textColor="#ff0000"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
